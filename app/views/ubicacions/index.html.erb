<%- model_class = Ubicacion -%>
<div class="page-header">
  <h1><%=t '.title', :default => Ubicacion %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:longitud) %></th>
      <th><%= model_class.human_attribute_name(:latitud) %></th>
      <th><%= model_class.human_attribute_name(:referencia) %></th>
      <th><%= model_class.human_attribute_name(:ciudad_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @ubicacions.each do |ubicacion| %>
      <tr>
        <td><%= ubicacion.id %></td>
        <td><%= ubicacion.longitud %></td>
        <td><%= ubicacion.latitud %></td>
        <td><%= ubicacion.referencia %></td>
        <td><%= ubicacion.ciudad_id %></td>
        <td><%=l ubicacion.created_at, format: :long %></td>
        <td>
          <%= link_to ubicacion_path(ubicacion), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to ubicacion_path(ubicacion), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_ubicacion_path,
            :class => 'btn btn-primary' %>
